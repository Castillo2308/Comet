# Server Configuration
PORT=5000
JWT_SECRET=your-secret-key-change-this-in-production

# Database (Neon PostgreSQL)
NEON_DATABASE_URL=postgresql://user:password@host/database

# MongoDB (opcional, si se usa)
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/database

# CORS Configuration (comma-separated, supports wildcards)
CORS_ORIGINS=http://localhost:5173, http://localhost:3000, https://your-app.vercel.app

# Google Cloud Vision API (for content moderation)
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Google OAuth (for Drive API access)
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_REFRESH_TOKEN=your-refresh-token
GOOGLE_IMPERSONATE_EMAIL=optional@yourdomain.com

# Google Drive Folder IDs (for file uploads)
DRIVE_REPORTS_FOLDER_ID=your-folder-id-for-reports
DRIVE_POSTS_FOLDER_ID=your-folder-id-for-posts

# Perspective API (for toxicity detection)
PERSPECTIVE_API_KEY=your-perspective-api-key

# Vite/Frontend API URL and Google Maps
VITE_API_URL=http://localhost:5000
VITE_GOOGLE_MAPS_KEY=your-google-maps-api-key

# JWT Configuration
JWT_EXPIRES=7d

# Email Configuration
GMAIL_SENDER_EMAIL=your-gmail@gmail.com
MAIL_FROM_NAME=Your App Name

# Public Base URL (for production deployment)
PUBLIC_BASE_URL=https://your-app.vercel.app

