{
	"version": 2,
	"buildCommand": "npm run build",
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/api/index.js",
			"methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
		},
		{
			"src": "/manifest.json",
			"dest": "/manifest.json"
		},
		{
			"src": "^/.*\\.(js|css|json|ico|png|svg|webp|gif|jpe?g|wasm|mjs)$",
			"dest": "/$1"
		},
		{
			"src": "^/((?!api).)*$",
			"dest": "/index.html"
		}
	]
}
